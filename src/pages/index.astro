---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { Project } from "../model/Project";
import WeatherDisplay from "../components/WeatherDisplay.astro";
import { getProjects } from "../services/content";

const projectList: Project[] = await getProjects();
---

<Layout title="3n3a - home">
	<main class="container">
		<div class="spread">
			<h1 class="font-silkscreen">3n3a</h1>
			<WeatherDisplay />
		</div>

		<div class="list">
			<Card
				href="/about"
				title="About Me"
				color="linear-gradient(45deg, #8acfff 0%, #60b9e6 100%, #6c9cbd 60%)"
				customBg="#f0f9ff"
			/>
			<Card
				href="/gallery/1"
				title="View Galleries"
				color="linear-gradient(45deg, #8acfff 0%, #60b9e6 100%, #6c9cbd 60%)"
				customBg="#f0f9ff"
			/>
			<Card
				href="/links"
				title="View Links"
				color="linear-gradient(45deg, #8acfff 0%, #60b9e6 100%, #6c9cbd 60%)"
				customBg="#f0f9ff"
			/>
			<!--Card
				href="/contact"
				title="Contact Me"
				color="linear-gradient(45deg, #cf9af9 0%, #aa50f4 100%, #bd7af4 60%)"
				customBg="#f5eaff"
			/-->
		</div>

		<div class="container more-space-above">
			<h2 class="font-style-black larger-font">Projects</h2>
			<div class="grid">
				{
					projectList.map(function (data) {
						return (
							<Card
								title={data.title}
								href={data.href}
								body={data.body}
								color={data.color}
								customBg={data.customBg}
							/>
						);
					})
				}
			</div>
		</div>
	</main>
</Layout>

<style>
	h2 {
		margin-top: 1.5em;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		grid-gap: 1rem;
	}

	.spread {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}
</style>
