---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Project } from '../model/Project';

const projectList: Project[] = [
	{title: "My Blog", href: "https://blog.3n3a.ch", body: "Personal blogging site, about tech, studying and more"}
]
---

<Layout title="3n3a - home">
	<main class="container">
		<h1>3n3a</h1>
		<Card
				href="/about"
				title="About Me"
				color="linear-gradient(45deg, #8acfff 0%, #60b9e6 100%, #6c9cbd 60%)"
				customBg="#f0f9ff"
			/>
		<h2 class="font-silkscreen">Projects</h2>
		<div class="grid">
			{projectList.map(function(data) {
				return <Card title={data.title} href={data.href} body={data.body} color={data.color} customBg={data.customBg} />
			})}
		</div>
		
	</main>
</Layout>

<style>

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	h2 {
		margin-top: 1.5em;
	}


	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		grid-gap: 1rem;
		}
</style>
