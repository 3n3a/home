---
import BackButton from '../components/BackButton.astro';
import QuoteDisplay from '../components/QuoteDisplay.astro';
import Layout from '../layouts/Layout.astro';
import { getHtml, getText } from '../services/content';

const WEBSITE_QUOTES_TITLE = await getText('WEBSITE_QUOTES_TITLE');
const WEBSITE_BACK_BUTTON_TITLE = await getText('WEBSITE_BACK_BUTTON_TITLE');

const ABOUT_ME_WEBSITE_TITLE = await getText('ABOUT_ME_WEBSITE_TITLE');
const ABOUT_ME_SECTION_TITLE = await getText('ABOUT_ME_SECTION_TITLE');
const ABOUT_ME_CONTENT = await getHtml('ABOUT_ME_CONTENT');
---

<Layout title={ABOUT_ME_WEBSITE_TITLE}>
	<main class="container">
		<h1 class="font-silkscreen">{ABOUT_ME_SECTION_TITLE}</h1>
        <BackButton title={WEBSITE_BACK_BUTTON_TITLE} href="/" />
		
		<div class="container more-space-above">
			<div class="rich-text-content" set:html={ABOUT_ME_CONTENT}></div>
		</div>
	
		<div class="container more-space-above">
			<h2 class="font-style-black larger-font">{WEBSITE_QUOTES_TITLE}</h2>
			<QuoteDisplay />
		</div>
	</main>
	
</Layout>

