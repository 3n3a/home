---
import {SEO} from 'astro-seo'
import TouchIcons from '../components/TouchIcons.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
	<TouchIcons />
	<SEO
      title={title}
      description="A portfolio of some of the things I have created or that I love especially."
      openGraph={{
        basic: {
          title: '3n3aâ€˜s Personal Homepage',
          type: 'website',
          image: 'https://3n3a.ch/branding.jpg',
          url: 'https://3n3a.ch',
        }
      }}
      />
</head>

<body>
	<slot />
</body>

</html>
<style>
	@font-face {
		font-family: 'Silkscreen';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url(/fonts/silkscreen.ttf) format('truetype');
	}

	:root {
		--font-silkscreen: 'Silkscreen', cursive;

		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: rgb(253, 236, 255);
		
		--card-border: rgb(253, 117, 246);
		--card-bg: rgb(255, 233, 255);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
        padding-bottom: 6rem;
	}


	:global(.font-silkscreen) {
		font-family: var(--font-silkscreen);
	}

	:global(h1) {
		font-size: var(--font-size-xl);
		font-family: var(--font-silkscreen);
	}
	
	:global(h2) {
		font-size: var(--font-size-lg);
	}

	:global(h3) {
		font-size: var(--font-size-base);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
